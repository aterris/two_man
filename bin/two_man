#!/usr/bin/env ruby
# encoding: utf-8

require File.expand_path('../../lib/two_man', __FILE__)
require 'thor'
require 'rainbow/ext/string'

# Usage:
#
#  chmod +x bin/two_man
#  bin/two_man start basic
#

module TwoMan
  class CLI < Thor
    package_name "Two-Man Rule Launcher"

    desc "install REPO_URL", "Install launch codes at REPO_URL"
    def install(url)
      Command.install(url)
    end

    desc "codes", "Display installed launch codes"
    def codes
      Command.display_launch_codes
    end

    desc "start LAUNCH_CODE", "Start launcher with LAUNCH_CODE"
    method_options :time => :string
    def start(launch_code)
      Launcher.new(launch_code)
    end 

  end
end

begin
  TwoMan::CLI.start
rescue Exception => e  
  puts e.message
end  
